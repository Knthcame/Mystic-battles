<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="PVPMistico.Views.SignInPage"
             xmlns:Prism="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
             xmlns:Converters="clr-namespace:PVPMistico.Converters;assembly=PVPMistico"
             xmlns:MyWidgets="clr-namespace:PVPMistico.Widgets;assembly=PVPMistico"
             Title="{Binding Title}">

    <ContentPage.Resources>

        <ResourceDictionary>

            <Converters:FirstValidationErrorConverter x:Key="FirstValidationErrorConverter"/>

        </ResourceDictionary>
        
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            
            <Label Text="Nombre"
                   Grid.Row="1"
                   VerticalOptions="End"/>
            
            <MyWidgets:ValidationEntry Grid.Row="2"
                                       ValidateString="{Binding Name}"
                                       UnfocusedCommand="{Binding NameUnfocusedCommand}"/>
            
            <Label Grid.Row="3"
                   Text="{Binding Name.Errors, Converter={StaticResource FirstValidationErrorConverter}}"
                   TextColor="Red"/>
            
            <Label Text="Email"
                   Grid.Row="4"
                   VerticalOptions="End"/>

            <MyWidgets:ValidationEntry Grid.Row="5"
                                       ValidateString="{Binding Email}"
                                       UnfocusedCommand="{Binding EmailUnfocusedCommand}"/>

            <Label Grid.Row="6"
                   Text="{Binding Email.Errors, Converter={StaticResource FirstValidationErrorConverter}}"
                   TextColor="Red"/>

            <Label Text="Usuario"
                   Grid.Row="7"
                   VerticalOptions="End"/>
            
            <MyWidgets:ValidationEntry Grid.Row="8"
                                       ValidateString="{Binding Username}"
                                       UnfocusedCommand="{Binding UsernameUnfocusedCommand}"/>

            <Label Grid.Row="9"
                   Text="{Binding Username.Errors, Converter={StaticResource FirstValidationErrorConverter}}"
                   TextColor="Red"/>

            <Label Text="ContraseÃ±a"
                   Grid.Row="10"
                   VerticalOptions="End"/>
            
            <Grid Grid.Row="11">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="9*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Entry Text="{Binding Password, Mode=OneWayToSource}"
                       IsPassword="{Binding HidePassword}"
                       Grid.Column="0"
                       Grid.ColumnSpan="2"/>
                
                <ImageButton Command="{Binding PasswordVisibilityToggleCommand}"
                             Grid.Column="1"
                             BackgroundColor="Transparent"
                             Source="{Binding PasswordVisibilityIcon}"
                             HeightRequest="25"
                             Padding="5"/>
            </Grid>

            <Label Grid.Row="12"/>

            <Button Text="Registrarse"
                    Grid.Row="13"
                    Command="{Binding SignInCommand}"
                    IsEnabled="{Binding AreCredentialsValid}"/>
            
        </Grid>
    </ContentPage.Content>
</ContentPage>
