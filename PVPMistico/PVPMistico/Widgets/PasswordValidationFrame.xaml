<?xml version="1.0" encoding="UTF-8"?>
<MyWidgets:BaseValidationFrame xmlns="http://xamarin.com/schemas/2014/forms"
                               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                               xmlns:MyWidgets="clr-namespace:PVPMistico.Widgets"
                               x:Class="PVPMistico.Widgets.PasswordValidationFrame"
                               x:Name="MyPasswordValidationFrame">

    <MyWidgets:PasswordValidationEntry UnfocusedCommand="{Binding UnfocusedCommand, Source={x:Reference MyPasswordValidationFrame}}"
                                       ValidatableObject="{Binding ValidatableObject, Source={x:Reference MyPasswordValidationFrame}}"
                                       IsPassword="{Binding HidePassword, Source={x:Reference MyPasswordValidationFrame}}"
                                       PasswordVisibilityIcon="{Binding PasswordVisibilityIcon, Source={x:Reference MyPasswordValidationFrame}}"
                                       PasswordVisibilityToggleCommand="{Binding PasswordVisibilityToggleCommand, Source={x:Reference MyPasswordValidationFrame}}"/>

</MyWidgets:BaseValidationFrame>